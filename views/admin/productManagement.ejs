              <h4 class="card-title">Product Management</h4>
              <div class="table-responsive">
                <!-- Table with categories data -->
                <form class="nav-link mt-2 mt-md-0 d-lg-flex search">
                  <input type="text" class="form-control" placeholder="Search categories">
                  <button class="btn btn-primary">Search</button>
                </form>

                <table class="table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th>Created Date</th>
                      <th>Updated Date</th>
                      <th>Update</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach((product)=> { %>
                      <tr id="category<%= product.id %>">
                        <td>
                          <%= product.name %>
                        </td>
                        <td>
                          <%= product.category %>
                        </td>
                        <td>
                          <%= product.price %>
                        </td>
                        <td>
                          <% const createdAt=new Date(product.createdAt); const
                            formattedDate=`${createdAt.getDate()}:${createdAt.getMonth() +
                            1}:${createdAt.getFullYear()}`; %>
                            <%= formattedDate %>
                        </td>
                        <td>
                          <% const updatedAt=new Date(product.updatedAt); const
                            formattedUpdatedDate=`${updatedAt.getDate()}:${updatedAt.getMonth() +
                            1}:${updatedAt.getFullYear()}`; %>
                            <%= formattedUpdatedDate %>
                        </td>
                        <td>
                          <button id="btn-update" class="btn btn-outline-danger btn-update" data-id="<%= product.id %>">
                            Update
                          </button>
                        </td>
                        <td>
                          <button id="btn-delete" class="btn btn-outline-warning btn-delete" data-id="<%= product.id %>">
                            Delete
                          </button>
                        </td>
                      </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
