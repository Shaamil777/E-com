<script>
  document.querySelectorAll('.btn-update').forEach((button)=>{
    button.addEventListener('click', (e)=>{
      const categoryId = e.target.dataset.id;
      window.location.href = `/admin/category/update/${categoryId}`;
    })
  })


  document.querySelectorAll('.btn-delete').forEach((button)=>{
    button.addEventListener('click',async function(){
      const categoryId = this.getAttribute('data-id');
      try {
        const response = await fetch('/admin/category/delete',{
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({categoryId:categoryId})
        })
        const result = await response.json()
         if(result.success){
          window.location.reload()
         }
      } catch (error) {
        console.error(error);
        alert('Failed to delete category')
      }
    })
  })
</script>
<script>
  let catId=null;
  function showmodal(categoryId){
     catId=categoryId;
     document.getElementById('offerModal').style.display = 'block';
  }

  async function applyOffer(){
    let offerPercentage=document.getElementById('offerPercentage').value
    if(!offerPercentage){
      swal.fire({
        title: 'Error',
        text: 'Please enter offer percentage',
        icon: 'error',
        confirmButtonText: 'Okay'
      })
      return;
    }
    if(offerPercentage>70){
      swal.fire({
        title: 'Error',
        text: 'Offer percentage should not exceed 70%',
        icon: 'error',
        confirmButtonText: 'Okay'
      })
      return;
    }
    if(offerPercentage<=0){
      swal.fire({
        title: 'Error',
        text: 'Offer percentage should not be negative',
        icon: 'error',
        confirmButtonText: 'Okay'
      })
      return;
    }

    try {
      const response = await fetch(`/admin/categorymanagement/${catId}/apply`,{
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({offerPercentage:offerPercentage})
      })
      const result = await response.json()
      if(result.success){
        swal.fire({
          title: 'Success',
          text: 'Offer applied successfully',
          icon:'success',
          confirmButtonText: 'Okay'
        }).then(()=>{
          window.location.href='/admin/categorymanagement'
        })
      }else{
        swal.fire({
          title: 'Error',
          text: result.message,
          icon: 'error',
          confirmButtonText: 'Okay'
        })
      }
    } catch (error) {
      console.error("Error while applying offer:",error);
      swal.fire({
        title: 'Error',
        text: 'Failed to apply offer',
        icon: 'error',
        confirmButtonText: 'Okay'
      })
    }
  }

  function closeModal(){
    document.getElementById('offerModal').style.display = 'none';
  }
</script>
