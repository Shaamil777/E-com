      <div class="custom-table-container">
        <h3 class="text-center">Order Details</h3>
        <div class="d-flex justify-content-start">
          <!-- Updated Table -->
          <table class="table table-bordered  custom-table mt-5">
            <thead class="thead-dark">
              <tr>
                <th>Order Number</th>
                <th>Username</th>
                <th>Date</th>
                <th>Price</th>
                <th>Payment Status</th>
                <th>Status</th>
                <th>Payment Mode</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order, index) { %>
                <tr>
                  <td><%= (index + 1).toString().padStart(3, '0') %></td>
                  <td><%= order.userId.name %></td>
                  <td><%= new Date(order.createdAt).toLocaleDateString('en-US', {
                    day: '2-digit',
                    month: 'long',
                    year: 'numeric'
                  }) %></td>
                  <td><%= order.totalAmount %></td>
                  <td><%= order.paymentStatus %></td>
                  <td><%= order.status %></td>
                  <td><%= order.paymentMethod %></td>
                  <td>
                    <button class="btn btn-primary btn-sm viewbtn position-relative" 
                            onclick="window.location.href='/admin/vieworder/<%= order._id %>'">
                      View
                      <% if (order.refundStatus === 'Requested') { %>
                        <span 
                          class="badge badge-danger position-absolute badge-small top-0 start-100 translate-middle">
                        </span>
                      <% } %>
                    </button>
                  </td>
                  
                </tr>
              <% }) %>
            </tbody>
            
          </table>
