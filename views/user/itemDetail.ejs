        .magnifier {
            position: absolute;
            border: 2px solid #000;
            border-radius: 50%;
            /* Change to rectangle by removing this */
            width: 200px;
            height: 200px;
            overflow: hidden;
            pointer-events: none;
            display: none;
            /* Hidden by default */
            transform: translate(-50%, -50%);
            z-index: 10;
        }

        .magnifier img {
            position: absolute;
            width: auto;
            height: auto;
            transform-origin: center;
        }



        /* Ensure the Owl Carousel takes up the full width and scrolls horizontally */
        .owl-carousel {
            display: flex;
            flex-wrap: nowrap;
            /* Prevent wrapping, keep items in a single row */
            overflow-x: auto;
            /* Allow horizontal scrolling if necessary */
