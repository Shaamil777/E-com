<script>
    // Product Quantity
    $('.quantity button').on('click', function () {
        var button = $(this);
        var oldValue = button.parent().parent().find('input').val();
        if (button.hasClass('btn-plus')) {
            var newVal = parseFloat(oldValue) + 1;
        } else {
            if (oldValue > 0) {
                var newVal = parseFloat(oldValue) - 1;
            } else {
                newVal = 0;
            }
        }
        button.parent().parent().find('input').val(newVal);
    });




    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            items: 4,  // Number of items visible at once (adjust as needed)
            margin: 20, // Space between the items
            loop: true,  // Allow looping of items
            nav: true,   // Enable navigation arrows if you want them
            dots: false, // Disable the dot navigation
            autoplay: true,  // Enable autoplay
            responsive: {
                0: {
                    items: 1  // For smaller screens, show 1 item at a time
                },
                768: {
                    items: 2  // For medium screens, show 2 items at a time
                },
                1024: {
                    items: 3  // For larger screens, show 3 items at a time
                },
                1200: {
                    items: 4  // For very large screens, show 4 items at a time
                }
            }
        });
    });

    cart = document.getElementById('addToCart')
    cart.addEventListener('click', async function () {
        const productId = document.getElementById('productId').value;
        const quantity = document.getElementById('quantity').value;

        try {
            const response = await fetch(`/addtocart/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ quantity })
            })
            const result = await response.json();
            if (result.success) {
                swal.fire({
                    title: 'Success',
                    text: result.message,
                    icon: 'success',
                    confirmButtonText: 'okay',
                }).then(() => {
                    window.location.reload();
                })
            }else if(response.status===401){
                swal.fire({
                    title: 'Error',
                    text: 'You must be logged in to add items to the cart',
                    icon: 'error',
                    confirmButtonText: 'okay',
                }).then(()=>{
                    window.location.href = '/login';
                })
            } else {
                swal.fire({
                    title: 'Error',
                    text: result.message,
                    icon: 'error',
                    confirmButtonText: 'okay',
                })
            }
        } catch (error) {
            console.error(error);
        }

    })


    document.addEventListener('DOMContentLoaded', function () {
        const carouselInner = document.querySelector('.carousel-inner');
        const magnifier = document.createElement('div');
        magnifier.classList.add('magnifier');
        const magnifierImg = document.createElement('img');
        magnifier.appendChild(magnifierImg);
        carouselInner.appendChild(magnifier);

        carouselInner.addEventListener('mousemove', function (e) {
            const target = e.target.closest('.zoom');
            if (!target) return;

            magnifier.style.display = 'block';
            magnifierImg.src = target.src;

            const rect = target.getBoundingClientRect();
            const x = e.clientX - rect.left; // Mouse X inside image
            const y = e.clientY - rect.top;  // Mouse Y inside image

            magnifier.style.left = `${e.clientX}px`;
            magnifier.style.top = `${e.clientY}px`;

            const magnifierScale = 2; // Magnification level
            magnifierImg.style.width = `${target.width * magnifierScale}px`;
            magnifierImg.style.height = `${target.height * magnifierScale}px`;

            // Position the magnified image inside the magnifier
            magnifierImg.style.left = `${-x * magnifierScale + magnifier.offsetWidth / 2}px`;
            magnifierImg.style.top = `${-y * magnifierScale + magnifier.offsetHeight / 2}px`;
        });

        carouselInner.addEventListener('mouseleave', function () {
            magnifier.style.display = 'none';
        });
    });




    //Adding to wishlist

    const addToWishlist = document.getElementById('addToWishlist');
    addToWishlist.addEventListener('click', async function () {
        const productId = document.getElementById('productId').value;

        try {
            const response = await fetch('/wishlist/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId })
            })

            const data = await response.json()

            if (data.success) {
                swal.fire({
                    icon: 'success',
                    title: 'Product Added to Wishlist',
                    text: data.message,
                    confirmButtonText: 'Ok',
                })
            }else if(response.status==401){
                swal.fire({
                    icon: 'error',
                    title:"User not logged in",
                    text: "Please login to add product to wishlist",
                    confirmButtonText: 'Ok',
                }).then(()=>{
                    window.location.href = '/login';
                })
            } else {
                swal.fire({
                    icon: 'error',
                    title: 'Failed to Add Product to Wishlist',
                    text: data.message,
                    confirmButtonText: 'Ok',
                })
            }
        } catch (error) {
            console.error('Error while adding to wishlist', error);
            swal.fire({
                icon: 'error',
                title: 'Failed to Add Product to Wishlist',
                text: data.message,
                confirmButtonText: 'Ok',
            })

        }
    })

</script>