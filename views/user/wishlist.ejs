<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URBANWORN</title>
     <!-- Favicon -->
     <link href="img/favicon.ico" rel="icon">

     <!-- Google Web Fonts -->
     <link rel="preconnect" href="https://fonts.gstatic.com">
     <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> 
 
     <!-- Font Awesome -->
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
 
     <!-- Libraries Stylesheet -->
     <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
 
     <!-- Customized Bootstrap Stylesheet -->
     <link href="/styles/user.css" rel="stylesheet">
     <style>



.table th:first-child {
    border-top-left-radius: 30px;
}

.table th:last-child {
    border-top-right-radius: 30px;
}
.table th:first-child {
    border-bottom-left-radius: 30px;
}

.table th:last-child {
    border-bottom-right-radius: 30px;
}



        table th{
            font-weight: normal;
        }

        table td img {
    width: 50px; /* Adjust this value as needed */
    height: auto; /* Keeps aspect ratio intact */
    max-width: 100%; /* Ensures image is responsive */
}

        table th,
    table td {
        vertical-align: middle;
        text-align: center;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .action-buttons button {
        min-width: 100px; /* Optional: Adjust button width for consistency */
    }

     </style>
</head>
<body>

    <%- include('../partials/userHeader') %>

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Whishlist</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="index.html" class="text-dark">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0 text-primary">Whishlist</p>
        </div>
    </div>
</div>
<!-- Page Header End -->


  <!-- Wishlist Table Start -->
  <div class="container my-5">
    <div class="row">
        <div class="col-12 ">
            <table class="table text-center ">
                <thead class="bg-primary text-dark ">
                    <tr>
                        <th>Product </th>
                        <th> </th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% if (wishlist && wishlist.length > 0) { %>
                        <% wishlist.forEach(item => { %>
                            <tr>
                                <td>
                                    <img src="<%= item.image %>" alt="<%= item.name %>" class="img-fluid rounded-circle ">
                                </td>
                                <td class="product-name-cell"><%= item.name %></td>
                                <td>$<%= item.price.toFixed(2) %></td>
                                <td>
                                    <% if (item.stock === 0) { %>
                                        <span class="text-danger">Out of Stock</span>
                                    <% } else { %>
                                        <span class="text-success">In Stock</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button 
                                            class="btn btn-success btn-sm add-to-cart rounded" 
                                            data-id="<%= item.id %>" 
                                            <%= item.stock === 0 ? 'disabled' : '' %>>
                                            Add to Cart
                                        </button>
                                        <button
                                            class="btn btn-danger btn-sm remove-item rounded" 
                                            data-id="<%= item.id %>">
                                            Remove
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">Your wishlist is empty!</td>
                        </tr>
                    <% } %>
                </tbody>
                
                
                
            </table>
        </div>
    </div>
</div>
    <!-- Wishlist Table End -->



<%- include('../partials/userFooter') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
