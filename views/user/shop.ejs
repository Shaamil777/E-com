<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Urbanworn.site - Products</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="/images/u3.jpg" rel="icon">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> 

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/styles/user.css" rel="stylesheet">
    <style>
        .card-header {
  position: relative;
  overflow: hidden;
}

.card-header img {
  transition: transform 0.3s ease;
}

.card-header:hover img {
  transform: scale(1.05);
}

.card-header .offer-tag {
  position: absolute;
  left: 12px;
  top: 12px;
  padding: 3px 20px;
  box-shadow: 2px 3px 5px 0px #0000007d;
  border-radius: 10px 0 10px 0;
  color: rgb(170, 51, 14);
  font-weight: 700;
  background-color: rgba(238, 238, 49, 0.76);
  z-index: 999;
  transition: transform 0.3s ease;
}

.card-header:hover .offer-tag {
  transform: scale(1.1);
}

    </style>
</head>

<body>
    
    <%- include('../partials/userHeader') %>

    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Our Shop</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Shop</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <!-- Price Start -->
               <!-- Price Filter Sidebar -->
                
<div class="border-bottom mb-4 pb-4">
    <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
    <select class="form-control" id="price-filter">
        <option value="all" selected>All</option>
        <option value="low-to-high" >Low to High</option>
        <option value="high-to-low">High to Low</option>
    </select>
    
</div>

                <!-- Price End -->
                
                <!-- Category Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by Category</h5>
                    <select class="form-control" id="category-filter">
                        <option value="all" selected>All Category (1000)</option>
                        <option value="mens">Mens (4)</option>
                        <option value="womens">Womens (4)</option>
                        <option value="pants">Pants (4)</option>
                    </select>
                </div>
                <!-- Category End -->

                <!-- Alphabet Start -->
                <div class="mb-5">
                    <h5 class="font-weight-semi-bold mb-4">Filter by Alphabet</h5>
                    <select class="form-control" id="alphabet-filter">
                        <option value="all" selected>All (1000)</option>
                        <option value="Aa-Zz">Aa-Zz (12)</option>
                        <option value="Zz-Aa">Zz-Aa (12)</option>
                    </select>
                </div>
           
                <!-- Alphabet End -->
                <form action="">
                   <!-- Search Form -->
                <div class="input-group">
                    <input type="text" class="form-control" id="search-input" placeholder="Search by name" autocomplete="off">
                    <div class="input-group-append">
                        <span class="input-group-text bg-transparent text-primary">
                            <i class="fa fa-search"></i>
                        </span>
                    </div>
                </div>
                </form>
            </div>
            <!-- Shop Sidebar End -->


            <!-- Shop Product Start -->
            <div class="col-lg-9 col-md-12">
                <div class="row pb-3">
                    <div class="col-12 pb-1">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="dropdown ml-4">
                               
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                    <a class="dropdown-item" href="#">Latest</a>
                                    <a class="dropdown-item" href="#">Popularity</a>
                                    <a class="dropdown-item" href="#">Best Rating</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <% product.forEach(product => { %>
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                            <div class="card product-item border-0 mb-4">
                                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                    <a href="/itemDetail/<%= product.id %>">
                                      <img class="img-fluid w-100" src="/<%= product.image[0] %>" alt="<%= product.name %>">
                                      <% if (product.withoutOfferPrice > 0) { %>
                                        <span class="offer-tag">
                                          <%= ((product.withoutOfferPrice - product.price) / product.withoutOfferPrice * 100) %>% 
                                          <i class="fa-solid fa-tag"></i>
                                        </span>
                                      <% } %>
                                    </a>
                                  </div>
                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                    <h6 class="text-truncate mb-3"><%= product.name %></h6>
                                    <div class="d-flex justify-content-center">
                                        <h6>&#8377;<%= product.price %></h6>
                                        <% if (product.originalPrice) { %>
                                            <h6 class="text-muted ml-2"><del>$<%= product.originalPrice %></del></h6>
                                            <% } %>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
               
                    
                        

                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->


    <%- include('../partials/userFooter') %>
    

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>
<script>
   $(document).ready(function () {
    // Prevent form submission to avoid page reload
    $('form').on('submit', function (e) {
        e.preventDefault();
    });

    // Attach change and keyup event listeners to filters and search
    $('#price-filter, #category-filter, #alphabet-filter, #search-input').on('change keyup', function () {
        // Get selected filter values
        const priceOrder = $('#price-filter').val();
        const category = $('#category-filter').val();
        const alphabetOrder = $('#alphabet-filter').val();
        const search = $('#search-input').val();

        // Send AJAX request to fetch filtered and searched products
        $.ajax({
            url: '/api/products',
            method: 'GET',
            data: {
                category: category,
                priceOrder: priceOrder,
                alphabetOrder: alphabetOrder,
                search: search
            },
            success: function (response) {
                // Update product list with the fetched data
                renderProducts(response);
            },
            error: function (err) {
                console.error('Error fetching products:', err);
            }
        });
    });

    // Function to render products (same as before)
    function renderProducts(products) {
        const productContainer = $('.row.pb-3');
        productContainer.empty(); // Clear existing products

        products.forEach(product => {
            const productHTML = `
                <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <a href="/itemDetail/${product.id}">
                                <img class="img-fluid w-100" src="/${product.image[0]}" alt="${product.name}">
                            </a>
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">${product.name}</h6>
                            <div class="d-flex justify-content-center">
                                <h6>&#8377;${product.price}</h6>
                                ${product.originalPrice ? `<h6 class="text-muted ml-2"><del>$${product.originalPrice}</del></h6>` : ''}
                            </div>
                        </div>
                    </div>
                </div>
            `;
            productContainer.append(productHTML);
        });
    }
});

</script>